{
  "name": "@lanonasis/vortexshield-web",
  "version": "1.0.0",
  "private": true,
  "description": "VortexShield landing page - Security infrastructure for cross-border safety",
  "scripts": {
    "dev": "VC_MICROFRONTENDS_CONFIG=../microfrontends.json next dev",
    "build": "VC_MICROFRONTENDS_CONFIG=../microfrontends.json next build --webpack",
    "start": "VC_MICROFRONTENDS_CONFIG=../microfrontends.json next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "export": "VC_MICROFRONTENDS_CONFIG=../microfrontends.json next build --webpack && next export",
    "deploy": "bun run build && netlify deploy --prod",
    "deploy:preview": "bun run build && netlify deploy",
    "analyze": "ANALYZE=true bun run build"
  },
  "dependencies": {
    "@lanonasis/ai-sdk": "^0.2.2",
    "@lanonasis/brand-kit": "^1.0.1",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vercel/microfrontends": "^1.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
